@section Stylesheets {
    <link rel="stylesheet" type="text/css" href="~/css/photos.css" />
}

@section Scripts {
    <script type="text/javascript" src="~/js/photos.js"></script>
}

@{
    ViewData["Title"] = "Jason Roodman - Photos";
}

<div class="container-fluid carousel-container">
    <div id="carouselControls" class="carousel slide" data-ride="carousel" data-interval="false">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="carousel-image" src="~/images/photos/black_sand_beach.jpg" alt="black sand beach photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Black Sand Beach</h3>
                    <p class="carousel-image-description">Photographed at Renisfjara in Iceland</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-image" src="~/images/photos/hoover_dam_pipe.jpg" alt="hoover dam pipe photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Pipe</h3>
                    <p class="carousel-image-description">Photographed beneath Hoover Dam</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-image" src="~/images/photos/letter_tree.jpg" alt="letter tree photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Letter Tree</h3>
                    <p class="carousel-image-description">Photographed at ARTECHOUSE in Washington, D.C.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-image" src="~/images/photos/tank.jpg" alt="tank photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Tank</h3>
                    <p class="carousel-image-description">Photographed in St. Louis, MO</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-image" src="~/images/photos/nyhavn_copenhagen.jpg" alt="nyhavn photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Nyhavn</h3>
                    <p class="carousel-image-description">Photographed in Copenhagen, Denmark</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-image" src="~/images/photos/light.jpg" alt="light photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Light</h3>
                    <p class="carousel-image-description">Photographed at ARTECHOUSE in Washington, D.C.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-image" src="~/images/photos/baldy_peak.jpg" alt="baldy peak photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Baldy</h3>
                    <p class="carousel-image-description">Photographed at the summit of Mt. Baldy in California, USA</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-image" src="~/images/photos/cage_the_elephant.jpg" alt="cage the elephant photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Cage the Elephant</h3>
                    <p class="carousel-image-description">Photographed at Life is Beautiful Music Festival 2017 in Las Vegas, Nevada</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-image" src="~/images/photos/round_tower.jpg" alt="round tower photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Round</h3>
                    <p class="carousel-image-description">Photographed in the Round Tower in Copenhagen, Denmark</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-image" src="~/images/photos/circle_life_is_beautiful.jpg" alt="circle photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Circle</h3>
                    <p class="carousel-image-description">Photographed at Life is Beautiful Music Festival 2017 in Las Vegas, Nevada</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-image" src="~/images/photos/glacier_hiking.jpg" alt="glacier photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Glacier Hiking</h3>
                    <p class="carousel-image-description">Photographed at Mýrdalsjökull glacier in Iceland</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="carousel-image" src="~/images/photos/ny_subway.jpg" alt="new york subway photo">
                <div class="carousel-caption">
                    <h3 class="carousel-image-title">Subway</h3>
                    <p class="carousel-image-description">Photographed under New York, USA</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container-fluid image-gallery">
    <img class="gallery-image" src="~/images/photos/black_sand_beach.jpg" onclick="highlightImage(this)" alt="black sand beach photo">
    <img class="gallery-image" src="~/images/photos/hoover_dam_pipe.jpg" onclick="highlightImage(this)" alt="hoover dam pip photo">
    <img class="gallery-image" src="~/images/photos/letter_tree.jpg" onclick="highlightImage(this)" alt="letter tree photo">
    <img class="gallery-image" src="~/images/photos/tank.jpg" onclick="highlightImage(this)" alt="tank photo">
    <img class="gallery-image" src="~/images/photos/nyhavn_copenhagen.jpg" onclick="highlightImage(this)" alt="nyhaven copenhagen photo">
    <img class="gallery-image" src="~/images/photos/light.jpg" onclick="highlightImage(this)" alt="light photo">
    <img class="gallery-image" src="~/images/photos/baldy_peak.jpg" onclick="highlightImage(this)" alt="baldy peak photo">
    <img class="gallery-image" src="~/images/photos/cage_the_elephant.jpg" onclick="highlightImage(this)" alt="cage the elephant photo">
    <img class="gallery-image" src="~/images/photos/round_tower.jpg" onclick="highlightImage(this)" alt="round tower photo">
    <img class="gallery-image" src="~/images/photos/circle_life_is_beautiful.jpg" onclick="highlightImage(this)" alt="circle photo">
    <img class="gallery-image" src="~/images/photos/glacier_hiking.jpg" onclick="highlightImage(this)" alt="glacier photo">
    <img class="gallery-image" src="~/images/photos/ny_subway.jpg" onclick="highlightImage(this)" alt="new york subway photo">
</div>